extends layout

block content

	.wrapper
		#findmuseums
			Find museums in:

	#locationField
		input#autocomplete(placeholder="Enter a city", type="text")

	#controls
		select#country
			option(value="all") All

			option(value="au") Australia

			option(value="br") Brazil

			option(value="ca") Canada

			option(value="fr") France

			option(value="de") Germany

			option(value="in", selected="") India

			option(value="mx") Mexico

			option(value="nz") New Zealand

			option(value="it") Italy

			option(value="za") South Africa

			option(value="es") Spain

			option(value="pt") Portugal

			option(value="us") U.S.A.

			option(value="uk") United Kingdom

	#map-canvas

	#listing
		table#resultsTable
			tbody#results

	// display info in the popup window of every marker!
	#info-content(data-bind="visible: infoWindowcontent")
		ul(data-bind="foreach: infoPlaces")  

		img(width="20", height="20", src="", alt="museum icon", data-bind="attr: {src: icon}")

		h3(data-bind="text: name")   

		p(data-bind="text: phone")  

		p(data-bind="text: adress")   

		p(data-bind="text: website")   
	
	// Mobile list of results, mobile navigation buttons, hidden until media query is activated
	.mobilewrapper(data-bind="visible: mobblock")
		.mobilebutton(data-bind="click: mobileToggleMusList")

	.mobmuseumresults(data-bind="visible: mobileMusShow() === true")
		ul(data-bind="foreach: museumResults")
			div(data-bind="click: $parent.goToMarker")
				img(style="cursor:pointer", src="", alt="marker", data-bind="attr: {src: markerPic}")

				li(data-bind="text: name")




